<h1>タスク新規作成ページ</h1>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-2  col-lg-3 col-lg-offset-3">
<%= form_for(@tasklists) do |f| %>
 <% if @tasklists.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @tasklists.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
  
   <div class="form-group">
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content  , class: 'form-control' %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status, class: 'form-control'  %>
  </div>

  <%= f.submit '投稿' , class: 'btn btn-primary' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
